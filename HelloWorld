package com.example; // Correct, should not trigger

import java.util.*; // This should trigger the AvoidStarImport module

public class HelloWorld {
    public static void main(String[]args){ // The missing space after String[] might trigger formatting checks.
        // Variable name starts with an uppercase letter, which should trigger naming conventions violation.
        int BadVariable = 10; 
        // Method call with unnecessary parentheses should trigger a check (if configured).
        System.out.println((BadVariable));

        try{
            // Empty try block should trigger EmptyBlock module
        } catch (Exception e) {
            e.printStackTrace();
        }

        if (BadVariable > 0) // Missing braces should trigger NeedBraces module
            System.out.println("Bad form");

        // Improperly placed right curly should trigger RightCurly module
        try {
            System.out.println("Check for right curly position");
        }
        catch (Exception e) {
            e.printStackTrace();
        }

    }

    // Improper naming convention should trigger MethodName module
    public static void BADMETHODname() {
        System.out.println("Bad method name.");
    }
}
